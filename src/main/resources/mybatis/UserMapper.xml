<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.baiyu.tmall.mapper.UserMapper">
    <insert id="insert">
        INSERT INTO user(username,email,password,status,create_time)
         VALUES(#{username},#{email}, #{password}, #{status}, #{createTime});
    </insert>
    <select id="getByName" resultType="User">
        SELECT * FROM user WHERE username=#{username} LIMIT 1
    </select>
    <select id="getSearch" resultType="User" >
        SELECT * FROM user
        <where>
            <if test="email!=null">
                and email = #{email}
            </if>
            <if test="status!=0">
                and status = #{status}
            </if>
        </where>
        ORDER BY user_id desc;
    </select>
</mapper>